<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name="com.leonardo.tableappreservation.ui.table.TableFragment"
        android:label="TABLE PREVIEW"
        tools:layout="@layout/fragment_table" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name="com.leonardo.tableappreservation.ui.orders.OrdersFragment"
        android:label="YOUR RESERVATIONS"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name="com.leonardo.tableappreservation.ui.profile.ProfileFragment"
        android:label="PROFILE"
        tools:layout="@layout/fragment_profile" />
</navigation>
